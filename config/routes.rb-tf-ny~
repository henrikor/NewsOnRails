#    :page => nil,
#    :lag => nil,
#    :id => /\d+/

#  map.connect 'lag/index/:lag/:id/:page',

  #  map.connect 'lag/lag/:id/:lag/:page',
#  map.connect 'lag/lag/:lag/:id/:page',

#  map.connect ':id', :controller => 'lag', :action => 'index'


end
